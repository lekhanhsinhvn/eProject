<div class="row">
    <div class="col-md-8 col-md-offset-2" style="background:white; margin-top:20px; margin-bottom:20px ;padding-bottom:20px; padding-top:20px; min-height:63.2vh;">
        <h1>User Profile:</h1>
        <label>E-mail: </label><p>{{user.email}}</p>
        <a href="/user/logout" style="float:right;"><button class="btn btn-success">Logout</button></a>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">{{ this.price }}</span>
                                {{ this.item.title }} | {{ this.qty }} Units
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>