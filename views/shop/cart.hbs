    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" style="background:white; margin-top:20px; margin-bottom:20px ;padding-bottom:20px; padding-top:20px; min-height:63.2vh;">
            {{# if products }}
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="label label-success">${{ this.price }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                <li><a href="/remove/{{this.item._id}}">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
            <strong>Total: {{ totalPrice }}</strong>
            <a href="/checkout" type="button" class="btn btn-success" style="float:right;">Checkout</a>
        </div>
        {{ else }}
            <h2>No Items in Cart</h2>
        {{/if}}
    </div>

